<div class="min-h-screen items-center justify-center place-content-center">
    <div class="m-20 bg-gray-100">
        <form id="one-bill-form">
            <div class="flex flex-row justify-center h-19 p-3">        
                <input class="hidden" id="bill" value="{{bill.id}}">      
            </div>
            <div class="flex flex-row justify-center h-19 p-3">        
                <p><b>Name: </b><input id="one-bill-name" value="{{bill.bill_name}}"></p>        
            </div>
            <div class="flex flex-row justify-center h-19 p-3">
                <p><b>Date: </b><input id="one-bill-date" value="{{format_date bill.due_date}}"></p>
            </div>
            
            <div class="flex flex-row justify-center h-19 p-3">
                <p><b>Amount: </b><input id="one-bill-amount" value="{{bill.amount}}"></p>
            </div>
            <div id="error-message" style="color: red;"></div>
            <div  style="justify-content: space-evenly;" class="flex flex-row h-19 p-3">
                <div class = "flex flex-row p-5">    
                    <button class="">
                        <i class="fa-solid fa-floppy-disk" style="color:rgb(39, 250, 39)"></i>
                        Save
                    </button>
                </div>
                <div class="flex flex-row p-5">
                    <button id="one-bill-delete" type="click">
                        <i class="fa-solid fa-trash" style="color: #f10f0f;"></i>
                    Delete
                    </button>
                </div>
                
            </div>
        </form>
    </div>
    

</div>

<script src="/js/billDelete.js"></script>

<script src="/js/billUpdate.js"></script>
